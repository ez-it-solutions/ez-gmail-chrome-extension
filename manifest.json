{
  "manifest_version": 3,
  "name": "Ez Gmail",
  "version": "1.0.0",
  "description": "Enhance your Gmail experience with quick actions, templates, and productivity tools.",
  "author": "Ez IT Solutions",
  "homepage_url": "http://www.Ez-IT-Solutions.com",
  "permissions": [
    "storage",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["js/content.js"],
      "css": ["css/gmail-enhancements.css"],
      "run_at": "document_end"
    }
  ]
}
